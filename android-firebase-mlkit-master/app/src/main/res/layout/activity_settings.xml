<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a60707"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:src="@drawable/profileimage" />

    <TextView
        android:id="@+id/settings_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="UserName"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/settings_userstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="User Status"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/change_profileimage_Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/change_status_Button"
        android:layout_alignStart="@+id/change_status_Button"
        android:layout_marginBottom="11dp"
        android:background="#ffffff"
        android:text="Change Image"
        android:textColor="#a60707"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/change_status_Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="Change Status"
        android:background="#ffffff"
        android:textColor="#a60707"
        android:textSize="18dp"/>

</RelativeLayout>
