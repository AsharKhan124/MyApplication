<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreFillActivity">

    <include layout="@layout/app_bar_toolbar"
        android:id="@+id/toolbar"/>



    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/user_name"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/user_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user_email"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="WhatApp number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/product_code_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user_number"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Product Price and Code"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/user_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/product_code_price"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Details(optional)"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user_detail"
        android:layout_margin="20dp"
        android:text="Submit"
        android:background="#ff8383"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"/>




</RelativeLayout>